{% extends 'base.html.twig' %}

{% block body %}
<section class="product-single">
  <div class="product-inner">
    <img src="{{ asset('images/' ~ (product.image ?: 'placeholder.jpg')) }}" alt="{{ product.name }}">
    <div class="product-info">
      <h1>{{ product.name }}</h1>
      <p class="price">â‚±{{ product.price|number_format(2, '.', ',') }}</p>
      <p>{{ product.description }}</p>

      <form method="post" action="{{ path('cart_add', {id: product.id}) }}">
        <label>Qty</label>
        <input type="number" name="qty" value="1" min="1" style="width:70px">
        <button class="btn-primary" type="submit">Add to Cart</button>
      </form>
    </div>
  </div>
</section>
{% endblock %}
